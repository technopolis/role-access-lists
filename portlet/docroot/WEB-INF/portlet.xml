<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	
	<portlet>
		<portlet-name>role-access-lists</portlet-name>
		<display-name>Role Access Lists</display-name>
		<portlet-class>
			gr.open.marketplace.portlets.AdminAllowedIPsPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/adminallowedips/view.jsp</value>
		</init-param>
		<init-param>
			<name>help-template</name>
			<value>/html/adminallowedips/help.jsp</value>
		</init-param>
		<init-param>
			<name>about-template</name>
			<value>/html/adminallowedips/about.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>help</portlet-mode>
			<portlet-mode>about</portlet-mode>
		</supports>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>Role Access Lists</title>
			<short-title>Role Access Lists</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>